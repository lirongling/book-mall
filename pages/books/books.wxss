.box {
    padding: 10px;
    background: rgb(235, 229, 229);
    position: fixed;
    padding: 10rpx;
    top: 0;
    width: 100%;
    height: 50rpx;
    /* height: 5vh; */
    z-index: 9;
}

.item {
    margin: 0 10px;
}

.items {
    color: darksalmon;
}

.title {
    text-align: center;
    position: relative;
}

.line {
    position: absolute;
    top: 30px;
    width: 100%;
    height: 2px;
    background: darksalmon;
}

.active {
    border-bottom: darksalmon 2px solid;
}

.content {
    position: absolute;
    width: 100%;
    top: 80rpx;
    left: 0;
}